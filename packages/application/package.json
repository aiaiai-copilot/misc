{
  "name": "@misc-poc/application",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "test -d src && yarn exec tsc --build",
    "test": "jest",
    "test:fast": "jest --testNamePattern='^((?!\\[perf\\]).)*$'",
    "test:perf": "jest --testNamePattern='\\[perf\\]'",
    "lint": "test -d src && cd ../../.. && yarn exec eslint packages/application/src --ext .ts",
    "typecheck": "yarn exec tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@misc-poc/domain": "workspace:*",
    "@misc-poc/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0",
    "jest-util": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.5.0"
  }
}
