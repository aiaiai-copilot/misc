{
  "name": "@misc-poc/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Backend API server for misc-poc monorepo",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:fast": "jest --testNamePattern='^((?!\\[perf\\]).)*$'",
    "test:perf": "jest --testNamePattern='\\[perf\\]'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'"
  },
  "dependencies": {
    "@misc-poc/application": "workspace:^",
    "@misc-poc/domain": "workspace:^",
    "@misc-poc/infrastructure-postgresql": "workspace:^",
    "@misc-poc/shared": "workspace:^",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
