{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "composite": true,
    "allowImportingTsExtensions": false,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    { "path": "../../shared" },
    { "path": "../../domain" },
    { "path": "../../application" }
  ]
}
