{
  "name": "@misc-poc/presentation-web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "sh -c 'if test -d src && test -f index.html; then yarn exec tsc --build && vite build; else echo \"No src directory or index.html found, skipping build\"; fi'",
    "preview": "vite preview",
    "test": "jest",
    "lint": "sh -c 'if test -d src; then eslint src --ext .ts,.tsx; else echo \"No src directory found, skipping lint\"; fi'",
    "typecheck": "yarn exec tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@misc-poc/application": "workspace:*",
    "@misc-poc/domain": "workspace:*",
    "@misc-poc/shared": "workspace:*",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "jest": "^29.0.0",
    "jest-util": "^29.0.0",
    "ts-jest": "^29.0.0",
    "vite": "^5.0.0"
  }
}
